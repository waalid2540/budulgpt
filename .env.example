# MadinaGPT Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL database URL (Render PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/madinagpt

# ============================================
# API KEYS & AUTHENTICATION
# ============================================

# Perplexity AI API Key (for Umrah deal search)
# Get your API key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Resend API Key (for email alerts)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here

# Twilio Credentials (for WhatsApp and SMS alerts)
# Get your credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
TWILIO_SMS_NUMBER=+1234567890

# JWT Secret for authentication (generate a random secure string)
JWT_SECRET=your_secure_random_jwt_secret_here_min_32_characters

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Backend URL
BACKEND_URL=http://localhost:8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://madinagpt.com,https://madinagpt.vercel.app

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,madinagpt.com

# ============================================
# NOTIFICATION CONFIGURATION
# ============================================

# Email settings
EMAIL_FROM=noreply@madinagpt.com
EMAIL_FROM_NAME=MadinaGPT Umrah Alerts

# Alert check interval (in hours)
ALERT_CHECK_INTERVAL=6

# ============================================
# OPTIONAL CONFIGURATION
# ============================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================
# MASJID MADINA SUPPORT
# ============================================
# 50% of all proceeds support Masjid Madina
# Faith • Knowledge • Guidance
