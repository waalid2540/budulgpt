# MadinaGPT Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL database URL (Render PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/madinagpt

# ============================================
# API KEYS & AUTHENTICATION
# ============================================

# Perplexity AI API Key (for Umrah deal search)
# Get your API key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Resend API Key (for email alerts)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here

# Twilio Credentials (for WhatsApp and SMS alerts)
# Get your credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
TWILIO_SMS_NUMBER=+1234567890

# JWT Secret for authentication (generate a random secure string)
JWT_SECRET=your_secure_random_jwt_secret_here_min_32_characters

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Backend URL
BACKEND_URL=http://localhost:8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://madinagpt.com,https://madinagpt.vercel.app

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,madinagpt.com

# ============================================
# NOTIFICATION CONFIGURATION
# ============================================

# Email settings
EMAIL_FROM=noreply@madinagpt.com
EMAIL_FROM_NAME=MadinaGPT Umrah Alerts

# Alert check interval (in hours)
ALERT_CHECK_INTERVAL=6

# ============================================
# AFFILIATE TRACKING (for earning commissions)
# ============================================

# Booking.com Affiliate Partner Program
# Sign up: https://www.booking.com/affiliate-program
BOOKING_AFFILIATE_ID=your_booking_affiliate_id_here

# Agoda YCS Affiliate Program
# Sign up: https://ycs.agoda.com
AGODA_AFFILIATE_ID=your_agoda_affiliate_id_here

# Hotels.com Affiliate Program
HOTELS_AFFILIATE_ID=your_hotels_com_affiliate_id_here

# Expedia Affiliate Program
EXPEDIA_AFFILIATE_ID=your_expedia_affiliate_id_here

# Skyscanner Affiliate Program (flights)
# Sign up: https://partners.skyscanner.net
SKYSCANNER_TRACKING_URL=your_skyscanner_tracking_url_here

# Kayak Affiliate
KAYAK_AFFILIATE_ID=your_kayak_affiliate_id_here

# Islamic/Umrah Booking Sites (higher commissions)
ALMOSAFER_PARTNER_ID=your_almosafer_partner_id_here
SEERA_PARTNER_ID=your_seera_partner_id_here
HALALBOOKING_AFFILIATE_ID=your_halalbooking_affiliate_id_here

# Travelpayouts (unified affiliate platform - RECOMMENDED)
# Sign up: https://www.travelpayouts.com
# Includes: Booking, Agoda, Hotels.com, and more in one platform
TRAVELPAYOUTS_MARKER=madinagpt

# ============================================
# OPTIONAL CONFIGURATION
# ============================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

